    <!-- 7-Day Bar Chart Section -->
    <LinearLayout
        android:id="@+id/chart_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/weekly_total_value"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <ProgressBar android:id="@+id/bar_0" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/widget_progress_style" android:max="100" />
        <ProgressBar android:id="@+id/bar_1" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/widget_progress_style" android:max="100" />
        <ProgressBar android:id="@+id/bar_2" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/widget_progress_style" android:max="100" />
        <ProgressBar android:id="@+id/bar_3" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/widget_progress_style" android:max="100" />
        <ProgressBar android:id="@+id/bar_4" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/widget_progress_style" android:max="100" />
        <ProgressBar android:id="@+id/bar_5" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_marginEnd="4dp" android:progressDrawable="@drawable/widget_progress_style" android:max="100" />
        <ProgressBar android:id="@+id/bar_6" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@drawable/widget_progress_style" android:max="100" />
    </LinearLayout>

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart_container"
        android:layout_marginTop="8dp"
        android:text="TB/ngÃ y: 0â‚«"
        android:textColor="#99FFFFFF"
        android:textSize="10sp" />

</RelativeLayout>
